#!/usr/bin/env bash

# (dotfiles) this is where the magic happens
# https://news.ycombinator.com/item?id=11071754

source "${HOME}/.dotfiles.constants"

message() {
    if [ $# -eq 2 ]; then
        TYPE="$1"
        shift
        printf "%s: %s" "$TYPE" "$@"
    else
        printf "%s " "$@"
    fi
}

info() {
    message "INFO" "$@"
}

error() {
    message "ERROR" "$@"
}
